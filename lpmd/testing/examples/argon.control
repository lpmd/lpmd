
cell cubic 17.1191
input crystal3d type=fcc symbol=Ar nx=3 ny=3 nz=3
output xyz output.xyz each=10

steps 5000

#monitor potential-energy,kinetic-energy,total-energy,temperature start=0 end=1000 each=10
prepare temperature t=168

use lennardjones
    sigma 3.41
    epsilon 0.0103408
    cutoff 8.5
enduse

#use leapfrog
#    dt 1.0
#enduse

use euler
    dt 1.0
enduse

use linkedcell
    cutoff 8.0
    nx 7
    ny 7
    nz 7
enduse

#use minimumimage
#    cutoff 8.0
#    debug none
#enduse

use printatoms
    from 0
    to 0
enduse

use gdr
    rcut 7.0
    output gdr.dat
    bins 200
    average true
enduse

use tempscaling
    from 168.0
    to 5.0
enduse

cellmanager linkedcell
#cellmanager minimumimage

potential lennardjones Ar Ar
#integrator leapfrog start=0
integrator euler start=0

apply tempscaling start=100 end=5000 each=200
property gdr start=0 end=5000 each=500
visualize printatoms start=0 end=5000 each=1000

