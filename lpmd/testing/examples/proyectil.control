
cell cubic 34.238
input module=lpmd file=proyectil.lpmd level=1
output module=lpmd file=output.lpmd each=10

use setcolor as red
    color <1.0,0.0,0.0>
enduse

use setvelocity 
    velocity <0,0,-0.01>
enduse

apply red over sphere radius=5 center=<17.911,17.911,26.827> start=0 end=1 each=1
apply setvelocity over sphere radius=5 center=<17.911,17.911,26.827> start=0 end=1 each=1

use settag as proyectil
    tag fixedvel
    value true
enduse

apply proyectil over sphere radius=5 center=<17.911,17.911,26.827> start=0 end=1 each=1

steps 100000

monitor step,potential-energy,kinetic-energy,total-energy,temperature start=0 end=100000 each=500
prepare temperature t=200.0

use lennardjones
    sigma 3.41
    epsilon 0.0103408
    cutoff 8.5
enduse

use euler
    dt 1.0
enduse

use minimumimage
    cutoff 8.0
    debug none
enduse

use tempscaling
    from 200.0
    to 10.0
enduse

use tempscaling as freeze
    from 10.0
    to 10.0
enduse

use lpvisual
    quality 2
enduse

cellmanager minimumimage

potential lennardjones Ar Ar
integrator euler start=0

apply tempscaling end=60000 each=2000
apply freeze start=60001 each=200
visualize lpvisual each=20

